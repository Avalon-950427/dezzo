/* packageWash/pages/chooseWashDetail/chooseWashDetail.wxss */
.container{
  padding: 1rpx 40rpx 0;
  box-sizing: border-box;
}

/* 开始拍照区域样式 */
.tip{
  color: rgba(153, 153, 153, 1);
}

.icon{
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(216, 216, 216, 1);
}

.uploader-wrap {
  display: flex; 
}

.tab{
  left: 0;
  top: 0;
  width: 80rpx;
  height: 40rpx;
  padding-left: 15rpx;
  line-height: 40rpx;
  color: rgba(255, 255, 255, 1);
  background-color: rgba(190, 47, 47, 1);
  border-radius: 12rpx 0 36rpx 0;
}

.des{
  text-align: center;
}
/* 结束拍照区域样式 */

/* 开始选择品牌区域样式 */

.choose-brand{
  width: 670rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  background-color: rgba(245, 245, 245, 1)
}

.choose-brand text{
  display: inline-block;
  transform: rotate(-90deg);
}

/* 结束选择品牌区域样式 */

/* 开始选择洗护项目区域 */
.clean-service-wrap{
  display: flex;
}

.clean-service{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: rgba(51, 51, 51, 1);
  background-color: rgba(245, 245, 245, 1);
}
/* 结束洗护项目区域 */