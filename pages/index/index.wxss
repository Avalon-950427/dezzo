/**index.wxss**/
page{
  background-color: #F3F3F3;
}
/* 开始分类区域样式 */
.classify-tab-wrap{
  display: flex;
  height: 80rpx;
  padding-top: 6rpx;
  background-color: white;
  box-sizing: border-box;
}

.classify-tab{
  position: relative;
  width: calc(100vw / 7);
  height: 100%;
  text-align: center;
  line-height: 50rpx;
  vertical-align: middle;
  color: #999;
}

.active-tab{
  color: #000;
}

.active-tab::after{
  /* 激活的分类tab */
  display: block;
  position: absolute;
  z-index: 99;
  bottom: 15rpx;
  left: 0;
  right: 0;
  content: '';
  width: 32rpx;
  height: 6rpx;
  margin: auto;
  background-color: #BE2F2F;
  border-radius: 6rpx;
}
/* 结束分类区域样式 */

/* 开始热门服务样式 */

.hot-service-wrap{
  width: 100vw;
  padding: 30rpx 40rpx;
  margin-top: 10rpx;
  background-color: white;
  box-sizing: border-box;
}

.hot-service-item{
  width: 320rpx;
  height: 160rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 160rpx;
  color:  rgba(181,181,181,100);
  background-color: #F3F3F3;
}

/* 结束热门服务样式 */

/* 开始最新上架样式 */
.new-putaway-wrap{
  width: 100vw;
  margin-top: 10rpx;
  padding: 30rpx 0 30rpx 40rpx;
  background-color: white;
  box-sizing: border-box;
}

.title-line{
  align-items: center;
  padding-right: 40rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.more{
  position: relative;
  padding-right: 30rpx;
  vertical-align: middle;
  color: #BE2F2F;
}

.more::after{
  display: block;
  position: absolute;
  z-index: 99;
  top: 0;
  bottom: 0;
  right: 0;
  content: '';
  width: 0;
  height: 0;
  margin: auto;
  border: 8rpx solid transparent;
  border-left: 10rpx solid #BE2F2F;
}

.putaway-goods-list{
  flex-wrap: nowrap;
}

.putaway-good + .putaway-good{
  margin-left: 30rpx;
}

.new-putaway-name{
  margin-top: 12rpx;
  white-space: nowrap;  
  text-overflow:ellipsis; 
  overflow:hidden;
  text-align: center;
}

.new-putaway-price{
  display: flex;
  justify-content: center;
  margin-top: 5rpx;
  vertical-align: bottom;
}

.new-putaway-price text{
  display: inline-block;
  align-self: center;
  margin-left: 8rpx;
  color: #999999;
}

/* 结束最新上架样式 */

/* 开始推荐商品样式 */

.recommend-goods-item{
  margin-top: 24rpx;
}

.recommend-goods-name{
  margin-top: 10rpx;
}

.recommend-goods-desc{
  margin-top: 4rpx;
}

.recommend-goods-price{
  color: #BE2F2F;
}

.recommend-goods-price text{
  display: inline-block;
  margin-left: 8rpx;
  color: #B5B5B5;
}
/* 结束推荐商品样式 */