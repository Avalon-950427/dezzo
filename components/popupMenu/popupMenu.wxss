/* components/popupMenu/popupMenu.wxss */
@import '/app.wxss';

.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
}

.popup-wrap{
  overflow-y: scroll;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 0rpx;
  border-radius: 24rpx 24rpx 0 0;
  background-color: white;
}

.show{
  max-height: 60%;
}
