/* packageGoods/pages/settlement/settlement.wxss */
.container{
  background-color: rgba(248, 248, 248, 1);
}
/* 开始地址选择区域 */
.address-area-wrap{
  display: flex;
  align-items: center;
  width: 100vw;
  height: 208rpx;
  padding-left: 50rpx;
  padding-right: 30rpx;
  background-color: white;
  box-sizing: border-box;
}

.non-address-tip{
  /* 未选地址的样式 */
  width: 100%;
  text-align: center;
  line-height: calc(208rpx - 12rpx);
  color: rgba(181, 181, 181, 1);
}

/* 开始选中地址的样式 */
.address-area{
  display: flex;
  align-items: center;
}

.arrow{
  display: inline-block;
  transform: rotate(-90deg);
}

/* 结束选中地址的样式 */

.bottom-line{
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 12rpx;
}

.color-block{
  flex-shrink: 0;
  width: 25rpx;
  height: 100%;
  background-color: rgba(223, 123, 123, 1);
  transform: skew(45deg);
}

.even{
  background-color: rgba(0, 90, 137, 1);
}

/* 结束地址选择区域 */

/* 开始商品信息区域样式 */

.goods-wrap{
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  background-color: white;
}

.good{
  display: flex;
}

.good-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 2rpx 0 10rpx 40rpx;
  color: rgba(51, 51, 51, 1);
}

.good-price{
  color: rgba(190, 47, 47, 1);
}

/* 结束商品信息区域样式 */

/* 开始抵扣区域样式 */

.discount-wrap{
  width: 100%;
  padding: 0 30rpx 0 40rpx;
  line-height: 80rpx;
  background-color: white;
  box-sizing: border-box;
}

.switch{
  width: 52rpx;
  height: 20rpx;
  background-color: #f1f1f1;
  transition: background-color .5s;
}

.pink-switch{
  background-color: #f2d5d5;
  transition: background-color .5s;
}

.switch-dot{
  top:50%;
  left: 0;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color: rgba(153, 153, 153, 1);
  transform: translate(0, -50%);
  transition: background-color .5s, left .5s;
}

.pink-dot{
  background-color: rgba(190, 47, 47, 1);
  left: 24rpx;
  transition: background-color .5s, left .5s;
}
/* 结束抵扣区域样式 */

/* 开始商品金额计算区域样式 */

.price-compute-wrap{
  width: 100%;
  padding: 35rpx 30rpx 35rpx 40rpx;
  background-color: white;
  box-sizing: border-box;
}

.price-compute-wrap > view{
  line-height: 45rpx;
}

.key,.key-grey{
  width: 128rpx;
  color: rgba(51, 51, 51, 1);
}

.value-red{
  color: rgba(190, 47, 47, 1)
}

/* 结束商品金额计算区域样式 */

/* 开始订单备注区域样式 */

.remark-area{
  width: 100%;
  height: 120rpx;
  padding: 0 40rpx;
  background-color: white;
  box-sizing: border-box;
}

.remark-area input{
  flex-grow: 1;
}

.placeholder-color{
  color: rgba(153, 153, 153, 1);
}

/* 结束订单备注区域样式 */

/* 开始结算区域样式 */

.settlement-area{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 1rpx solid rgba(222, 222, 222, 1);
  color: rgba(190, 47, 47, 1);
  background-color: white;
  box-sizing: border-box;
}

.pay-btn{
  width: 230rpx;
  height: 72rpx !important;
  letter-spacing: 2rpx;
}

/* 结束结算区域样式 */