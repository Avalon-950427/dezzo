/* packageOrder/pages/goodOrder/goodOrderDetail/goodOrderDetail.wxss */
.container{
  background-color: #f8f8f8;
}

/* 开始头部状态栏区域样式 */

.status-wrap{
  justify-content: center;
  width: 100%;
  height: 170rpx;
  padding: 0 40rpx;
  color: white;
  box-sizing: border-box; 
}

/* 结束头部状态栏区域样式 */

/* 开始用户信息和订单物流状态区域样式 */
.address-delivery-wrap{
  padding: 0 30rpx 0 40rpx;
  background-color: white;
  box-sizing: border-box;
}

.address-wrap,.delivery-wrap{
  height: 156rpx;
}

.address-wrap{
  border-bottom: 1rpx solid rgba(245, 245, 245, 1);
  box-sizing: border-box;
}

.arrow{
  transform: rotate(-90deg);
}

/* 开始用户信息和订单物流状态区域样式 */

/* 开始商品列表区域样式 */
.goods-wrap{
  padding: 40rpx 40rpx 20rpx;
  background-color: white;
  box-sizing: border-box;
}
/* 结束商品列表区域样式 */

/* 开始订单备注区域样式 */
.remark-wrap{
  height: 120rpx;
  padding: 0 34rpx 0 40rpx;
  background-color: white;
  box-sizing: border-box;
}
/* 结束订单备注区域样式 */

/* 开始优惠抵扣区域 */

.discount-wrap{
  padding: 24rpx 30rpx 36rpx 40rpx;
  background-color: white;
  box-sizing: border-box;
}

/* 结束优惠抵扣区域 */

/* 开始订单信息区域 */

.order-info-wrap{
  padding: 30rpx 30rpx 36rpx 40rpx;
  background-color: white;
  box-sizing: border-box;
}

/* 结束订单信息区域 */

/* 开始底部按钮区域样式 */

/* 开始按钮区域样式 */

.btn-wrap{
  position: fixed;
  bottom: 0;
  left: 0;
  justify-content: flex-end;
  width: 100%;
  height: 100rpx;
  padding: 0 40rpx;
  box-shadow: 0 0 8rpx 0 rgba(0,0,0,0.05);
  background-color: white;
  box-sizing: border-box;
}

.btn{
  height: 60rpx !important;
  margin-left: 20rpx;
  font-family: "PingFangSC-Medium", "sy-m";
  font-size: 26rpx !important;
}

/* 结束按钮区域样式 */

