/* packageOrder/pages/washOrder/applyRework/applyRework.wxss */
.container{
  padding: 20rpx 40rpx 0;
  box-sizing: border-box;
}

.asterisk{
  color: rgba(190, 47, 47, 1);
}

/* 开始选择售后物件区域样式 */

.img-border{
  border: 4rpx solid rgba(190, 47, 47, 1);
  box-sizing: border-box;
}

.text-center{
  text-align: center;
}

.choosed{
  color: rgba(190, 47, 47, 1);
}

.good-wrap{
  flex-wrap: wrap;
}

/* 结束选择售后物件区域样式 */

/* 开始售后原因区域样式 */

.rework-reason-wrap{
  flex-wrap: wrap;
}

.rework-reason{
  height: 60rpx;
  padding: 0 22rpx;
  line-height: 60rpx;
  color: rgba(102, 102, 102, 1);
  background-color: rgba(245, 245, 245, 1);
  box-sizing: border-box;
}

.choosed-reason{
  color: rgba(190, 47, 47, 1);
  background-color: rgb(248,234,234);
}

.textarea{
  width: 100%;
  height: 164rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(213, 213, 213, 1);
  box-sizing: border-box;
}
/* 结束售后原因区域样式 */

/* 开始底部按钮区域样式 */

.bottom-btn-wrap{
  align-items: center;
  justify-content: flex-end;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border-top: 1rpx solid rgba(222, 222, 222, 1);
  background-color: white;
  box-sizing: border-box;
}

.btn{
  height: 72rpx !important;
  font-family: "PingFangSC-medium","sy-m";
  font-weight: 500;
  font-size: 26rpx !important;
  letter-spacing: 2rpx;
}

/* 结束底部按钮区域样式 */